<form id="frmBrothers" name="frmBrothers" method="post">
    <input type="hidden" id="hdnId" name="hdnId"/>
    <div class="form-row my-2">
        <label class="col-2 col-form-label" for="cmbYear">Year:</label>
        <select id="ddlYear" name="ddlYear" class="col-6 form-control custom-select"></select>
    </div>
    <div class="form-row my-2">
        <label class="col-form-label col-2">Name:</label>
        <input type="text" class="form-control col-6" id="txtName" name="txtName" required />
    </div>
    <div class="form-row my-2">
        <label class="col-form-label col-2">Staff Name:</label>
        <input type="text" class="form-control col-6" id="txtStaffName" name="txtStaffName" required />
    </div>
    <div class="form-row my-2">
        <label class="col-form-label col-2">Big Brother:</label>
        <select class="form-control col-6" id="cmbBigBrother" name="cmbBigBrother" required>
            <option value=-1></option>
        </select>
    </div>
    <div class="form-row my-2">
        <label class="col-form-label col-2">Status:</label>
        <select class="form-control custom-select col-6" id="ddlStatus" name="ddlStatus" required>
            <option value="Brother">Brother</option>
            <option value="Elder">Elder</option>
            <option value="Founder">Founder</option>
        </select>
    </div>
        
